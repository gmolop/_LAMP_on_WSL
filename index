// IP's
function getip($from) {
    switch ($from) {
        case 'Server':
            $_ip = @$_SERVER['HTTP_X_SERVER_ADDRESS'] ?: @$_SERVER['SERVER_ADDR'];
            break;
        case 'Client':
            if (isset($_SERVER)) {
                if (isset($_SERVER["HTTP_X_FORWARDED_FOR"])) {
                    $_ip = $_SERVER["HTTP_X_FORWARDED_FOR"];
                } elseif (isset($_SERVER["HTTP_CLIENT_IP"])) {
                    $_ip = $_SERVER["HTTP_CLIENT_IP"];
                } else {
                    $_ip = @$_SERVER["REMOTE_ADDR"];
                }
            } else {
                if (getenv('HTTP_X_FORWARDED_FOR')) {
                    $_ip = getenv('HTTP_X_FORWARDED_FOR');
                } elseif (getenv('HTTP_CLIENT_IP')) {
                    $_ip = getenv('HTTP_CLIENT_IP');
                } else {
                    $_ip = getenv('REMOTE_ADDR');
                }
            }
            break;
        case 'Public':
            $_ip = file_get_contents('http://ipecho.net/plain');
            break;
    }
    $return = false;
    if (filter_var($_ip, FILTER_VALIDATE_IP, FILTER_FLAG_IPV4)) {
        $return = $from . ' <a>IPv4 '.$_ip.'</a>';
    }
    if (filter_var($_ip, FILTER_VALIDATE_IP, FILTER_FLAG_IPV6)) {
        $return = $from . ' <a>IPv6 '.$_ip.'</a>';
    }
    return $return ?: $from . ' has an invalid IP';
}

