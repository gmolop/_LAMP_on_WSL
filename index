    $systemInfo['php'][] = "<span class=\"". (extension_loaded($key) ? 'enabled': 'disabled') ."\"></span> " . $key;
} $phpInfo = join(" | ", $systemInfo['php']);
// apache modules
foreach ($apache_modules as $key) {
    $systemInfo['apache'][] = "<span class=\"". (extension_loaded($key) ? 'enabled': 'disabled') ."\"></span> " . $key;
} $apacheInfo = join(" | ", $systemInfo['apache']);
// owl extensions
foreach ($owl_extensions as $key) {
    $systemInfo['owl'][] = "<span class=\"". (extension_loaded($key) ? 'enabled': 'disabled') ."\"></span> " . $key;
